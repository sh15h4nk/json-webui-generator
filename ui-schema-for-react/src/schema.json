"draft7": {
    "type": "object",
    "description": "Freifunk Community API X.X.X",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [ "api", "name", "location", "contact", "url", "state"],
    "$defs":{
        "stringField":{ "type": "string" },
        "integerField" :{ "type": "integer"}
    },
    "properties": {
    "title":{"$ref": "#/$defs/stringField"},
    "title_num":{"$ref": "#/$defs/integerField"},
    "api": {
        "title": "API",
        "type": "string",
        "widget": "Select",
        "description": "The Freifunk Community API version you use",
        "enum": [
          "0.1",
          "0.2.0",
          "0.2.1",
          "0.3.0",
          "0.3.1",
          "0.3.2",
          "0.4.0",
          "0.4.1",
          "0.4.2",
          "0.4.3",
          "0.4.4",
          "0.4.5",
          "0.4.6",
          "0.4.7",
          "0.4.8",
          "0.4.9",
          "0.4.10",
          "0.4.11",
          "0.4.12",
          "0.4.13",
          "0.4.14",
          "X.X.X"
        ],
        "default": "X.X.X"
      },
      "name": {
        "title": "Name",
        "type": "string",
        "description": "The name of your community"
      },
      "metacommunity": {
        "title": "Metacommunity",
        "type": "string",
        "description": "The name of your meta community, if your local community belongs to a bigger one"
      },
      "location": {
        "title": "Location",
